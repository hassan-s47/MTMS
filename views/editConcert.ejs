<%- include("./header.ejs")  %> 

<ul class="list-inline menu-left mb-0">
    <li class="list-inline-item">
        <button type="button" class="button-menu-mobile open-left waves-effect">
            <i class="ion-navicon"></i>
        </button>
    </li>
    <li class="hide-phone list-inline-item app-search">
        <h3 class="page-title">Add Concert</h3>
    </li>
</ul>

<div class="clearfix"></div>

</nav>

</div>
                    <div class="page-content-wrapper ">

                        <div class="container-fluid">
                           <form action="/update/concert" method="post">
                             <div class="row">
                                 
                        <div class="col-md-6">
                            <div class="form-group row">
                                <label for="example-search-input" class="col-sm-2 col-form-label">Title</label>
                                <div class="col-sm-10">
                                    <input class="form-control" type="text" required name="title" value="<%=concertData.title%>" id="concert-title">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="example-search-input" class="col-sm-2 col-form-label">Location</label>
                                <div class="col-sm-10">
                                    <input class="form-control" required type="text" value="<%=concertData.location%>" name="location" id="location">
                                    <input class="form-control" required type="hidden" value="<%=concertData._id%>" name="concertid" id="location">
                                </div>
                            </div>

                         
                            
                            <div class="form-group row">
                                <label for="example-date-input"class="col-sm-2 col-form-label">Date</label>
                                <div class="col-sm-10">
                                    <input class="form-control" type="date-time-local"required name="dates" value="<%=concertData.dates%>"  id="date">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="example-search-input" class="col-sm-2 col-form-label">Commentar</label>
                                <div class="col-sm-10">
                                    <textarea rows="5" style="width: 100%" name="commentar" required  id = "commentar"><%=concertData.comments%></textarea>
                                </div>
                            </div>
                           
                         

                            <button type="submit" class="btn btn-info waves-effect waves-light">Update</button>



                        </div>

                        <div style="overflow-x:auto; " class="col-md-6" >
                            
                            <table id="datatable" class="table table-bordered dt-responsive nowrap" cellspacing="0" width="100%">
                                <thead>
                                <tr>
                                    <th>Student Name</th>
                                    <th>Add</th>
                                </tr>
                                </thead>

                                <tbody>
                                    <% students.forEach(element => { 
                                        if(concertData.students.indexOf(element._id)==-1 )
                                        {
                                        %>
                                     <tr>
                                         <td> <%= element.name %> </td>
                                         <td><input type="checkbox" class="studentid" name="studentid[]"  value= <%= element._id %>></td>
                                         
                                     </tr>
                                    <% }
                                     else{
                                        %>
                                     
                                        <tr>
                                            <td> <%= element.name %> </td>
                                            <td><input type="checkbox" class="studentid" name="studentid[]" checked  value= <%= element._id %>></td>
                                            
                                        </tr>
                                
                                    <%
                                
                                    }}) %>
                                </tbody>

                            </table>
                        
                        </div>
                    </div>
                </form>
                    </div>
                    </div>

    
