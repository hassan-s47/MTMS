<%- include("./header.ejs") %>
<ul class="list-inline menu-left mb-0">
    <li class="list-inline-item">
        <button type="button" class="button-menu-mobile open-left waves-effect">
            <i class="ion-navicon"></i>
        </button>
    </li>
    <li class="hide-phone list-inline-item app-search">
        <h3 class="page-title">Request Availibility</h3>
    </li>
</ul>

<div class="clearfix"></div>

</nav>

</div>
<!-- Top Bar End -->

<div class="page-content-wrapper ">

<div class="container-fluid">
    
    <div class="row" >
    <div class="col-md-8 mx-auto">
        <form action="/requestAvailability" method="post">
        <h2>Message</h2>
        <div class="form-group row">
            <label for="example-search-input" class="col-sm-2 col-form-label">Select Class</label>
            <div class="col-sm-10">
            <select class="form-control" name="class" required>
                <option value="All" selected>All</option>
                <% 
                 classes.forEach(element => { %>
                 
                    <option value="<%=element._id%>"><%= element.className %></option>
                    <% }) %> 
                
            </select>  
            </div>
        </div>
        <div class="form-group row">
            
            <label for="example-search-input" class="col-sm-2 col-form-label">Subject</label>
            <div class="col-sm-10">
             <input type="text" name="subject" class="form-control" placeholder="Subject"  required>
            </div>
        </div>
        <div class="form-group row">

            <label for="example-search-input" class="col-sm-2 col-form-label">Enter Message</label>
            <div class="col-sm-10">
                <textarea rows="5" style="width: 100%" placeholder="Message ..." name="message"  required></textarea>
            </div>
        </div>
      
        <div >
            <div style=" display:inline;">
                 <a href="/blockSlot"><input type="button" value="Previous" class="btn btn-dark btn-lg"></a>
                </div>
            
            <div class="float-right" style=" display:inline;">
                
                <input type="submit" class="btn btn-success btn-lg" value="Send">
            </div>
            </div>
    </form>
        </div>
         
    
    </div>

</div>


</div> <!-- Page content Wrapper -->

</div> <!-- content -->
