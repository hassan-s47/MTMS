<%- include("./header.ejs") %>
    <ul class="list-inline menu-left mb-0">
        <li class="list-inline-item">
            <button type="button" class="button-menu-mobile open-left waves-effect">
                <i class="ion-navicon"></i>
            </button>
        </li>
        <li class="hide-phone list-inline-item app-search">
            <h3 class="page-title">Manage Routine</h3>
        </li>
    </ul>

    <div class="clearfix"></div>

    </nav>

    </div>
    <div class="page-content-wrapper ">

        <div class="container-fluid">



            <div class="row" style="margin-top:4px;">
                <div class="col-lg-4">
                    <div class="card m-b-20">
                        <div class="card-body">

                            <div class="media">
                                <!-- <img class="d-flex mr-3 rounded-circle img-thumbnail thumb-lg" -->
                                    <!-- src="assets/images/users/avatar-2.jpg" alt="Generic placeholder image"> -->
                                <div class="media-body">
                                    <h5 class="mt-0 font-18 mb-1"><%= student.name %></h5>
                                    <p class="text-muted font-14"><%= student.email %> </p>
                                    <p class="text-muted font-14">Status: <span style="color:green">Active</span></p>
                                </div>
                            </div>  

                        </div>
                    </div>
                </div> <!-- end col -->

                <div class="col-lg-5">
                    <div class="table-rep-plugin">
                        <div class=" b-0" data-pattern="priority-columns">
                            <table id="datatable" class="table table-bordered " cellspacing="0" width="100%"
                                style="  overflow-y:scroll;height:100px;">
                                <thead>
                                    <tr>
                                        <th colspan="2">
                                            Songs
                                            <button type="button" class="btn btn-link waves-effect"
                                                style="color:blue;">view all</button>

                                        </th>
                                    </tr>
                                    <tr>
                                        <th>Song Name</th>
                                    </tr>
                                </thead>


                                <tbody>
                                    <% songs.forEach(song => { %>
                                        <tr>
                                            <td><%= song.pieceName %> </td>
                                        </tr>
                                    <% }) %>
                                   

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

                <div class="col-lg-3">



                    <div class="table-rep-plugin">
                        <div class="table-responsive b-0" data-pattern="priority-columns">
                            <table id="datatable" class="table table-bordered dt-responsive nowrap" cellspacing="0"
                                width="100%">
                                <thead>
                                    <tr>
                                        <th colspan="2">
                                            Concerts
                                            <button type="button" class="btn btn-link waves-effect"
                                                style="color:blue;">view all</button>

                                        </th>
                                    </tr>
                                    <tr>
                                        <th>Description</th>
                                        <th>Date</th>

                                    </tr>
                                </thead>


                                <tbody>
                                    <% concerts.forEach(concert => { %>
                                        <tr>
                                            <td><%= concert.title %> </td>
                                            <td><%= concert.dates %> </td>
    
                                        </tr>
                                    <% }) %>
                                 

                                </tbody>
                            </table>

                        </div>

                    </div>


                </div>
            </div>
            <div class="row">
                <div class="col-md-7">

                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Mark Attendence</label>
                        <div class="col-sm-10">
                            <select class="form-control" name="gender" required>
                                <option disabled selected>Select</option>

                                <option value="A">Absent</option>
                                <option value="L">Leave</option>
                                <option value="P">Present</option>
                            </select>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label for="example-search-input" class="col-sm-2 col-form-label">Remarks</label>
                        <div class="col-sm-10">
                            <textarea rows="5" style="width: 100%" name="address"
                                placeholder="Enter Description here..."></textarea>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="example-search-input" class="col-sm-2 col-form-label">Next Lesson</label>
                        <div class="col-sm-10">
                            <textarea rows="5" placeholder="Enter Description here..." style="width: 100%"
                                name="address"></textarea>
                        </div>
                    </div>


                    <div class="button-items">
                        <button type="button" class="btn btn-success waves-effect waves-light">Submit</button>

                        <button type="button" class="btn btn-primary waves-effect">View Projects</button>

                    </div>

                </div>
                <div class="col-md-5">

                    
                </div>
            </div>
        </div>
    </div>
    </div>




    <%- include("./footer.ejs") %>