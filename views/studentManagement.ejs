                            </div>
                            <div class="col-md-4">
                             
                            </div>
                        </div>

                           
                            <div class="row" style="margin-top:4px;">
                                <% items.forEach(function(image) { %> 
                                <div class="col-lg-4">
                                    <div class="card m-b-20">
                                        <div class="card-body">

                                            <div class="media">
                                                <img src="<%= image.img %> " class="d-flex mr-3 rounded-circle img-thumbnail thumb-lg">
                                                <div class="media-body">
                                                    <h5 class="mt-0 font-18 mb-1"><%= image.name %></h5>
                                                    <p class="text-muted font-14"><%= image.email %></p>


                                                </div>
                                            </div>

                                        </div>
                                    </div>
                                </div> <!-- end col -->
                                <% }) %> 
                                

                            </div>

                  
                        </div><!-- container-fluid -->


