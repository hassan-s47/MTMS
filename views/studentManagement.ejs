                    <div class="page-content-wrapper ">

                        <div class="container-fluid">
                           <div class="row">
                            
                               <div class="col-md-10"></div>
                               <div class="col-md-2">
                                  <a href="/addStudent"> <button type="button" class="btn btn-dark btn-block"><i class="fa fa-plus"></i>Add Student</button></a>
                               </div>
                               </div>
                            <div class="row" >
                                <div class="col-md-6">
                                    <form action="">
                                    <div class="form-group row">
                                        <label for="example-search-input" class="col-sm-2 col-form-label">Select Class</label>
                                        <div class="col-sm-10">
                                        <select class="form-control">
                                            <option value="All" selected>All</option>
                                            <option value="class A">Class A</option>
                                            <option value="class B">Class B</option>
                                            <option value="class C">Class C</option>
                                        </select>  
                                        </div>
                                    </div>
                                   
                                  </div>
                                <div class="col-md-2">

                             <input type="submit" value="Find" class="btn btn-primary btn-block">
