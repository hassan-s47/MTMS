<%- include("./header.ejs") %>
<ul class="list-inline menu-left mb-0">
    <li class="list-inline-item">
        <button type="button" class="button-menu-mobile open-left waves-effect">
            <i class="ion-navicon"></i>
        </button>
    </li>
    <li class="hide-phone list-inline-item app-search">
        <h3 class="page-title">Add Song</h3>
    </li>
</ul>

<div class="clearfix"></div>

</nav>

</div>
                    <div class="page-content-wrapper ">

                        <div class="container-fluid">
                         

                           
                            <div class="row">
                                <div class="col-md-7">
                                    <form action="/addSong" method="post" enctype="multipart/form-data">
                                    
                                    <input type="hidden" value = "<%=id%>" name = "albumid">
                                    <div class="form-group row">
                                        <label for="example-search-input" class="col-sm-2 col-form-label">Date</label>
                                        <div class="col-sm-10">
                                           <input type="month" min="1900" max="2099" step="1"  name = "year" class="form-control">   </div>
                                    </div>
                                    <div class="form-group row">
                                        <label for="example-search-input" class="col-sm-2 col-form-label">Composer Name</label>
                                        <div class="col-sm-10">
                                            <input name="composername" required class="form-control" type="text">
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label for="example-search-input" class="col-sm-2 col-form-label">Song Name</label>
                                        <div class="col-sm-10">
                                            <input name="songname" required class="form-control" type="text">
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label for="example-search-input" class="col-sm-2 col-form-label">Song File</label>
                                        <div class="col-sm-10">
                                            <input name="file" required class="form-control" type="file">
                                        </div>
                                    </div>
                                           
                                   
                                    <div class="button-items">
                                        <button type="submit" class="btn btn-success waves-effect waves-light btn-lg">Save</button>

                            

                                    </div>

                                </div>
                                <div class="col-md-5">

                                    <div class="table-rep-plugin ">
                                        <div class=" b-0" data-pattern="priority-columns " style=" max-height:200px">
                                            <table id="datatable" class="table table-bordered " cellspacing="0" width="100%">
                                                <thead>
                                                    <tr>
                                                    <th colspan="2">
                                                        Students
                                                        <!-- <button type="button" class="btn btn-link waves-effect" style="color:blue;">view all</button> -->
                               
                                                    </th>
                                                </tr>
                                               
                                                <tr>
                                                    <th>Name</th>
                                                    <th>Action</th>
                                                   
                                                </tr>
                                                </thead>
                                                <tbody>
                                                    <% items.forEach(function(student) { %> 
                                                <tr>
                                                    <td> <%=student.name   %></td>
                                                    <td style="color:green"> <input type="checkbox" name="student[]" value="<%=student._id%>"></td>
                                                    
                                                </tr>
                                                <% }) %> 
                                               
                                                </tbody>
                                            </table>
                                            
                                        </div>
    
                                    </div>
                                    

                                </div>

                            </form>

                            </div>


                            </div>

                  
                        </div>


                    </div>




